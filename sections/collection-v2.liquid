<style>
  .collection-v2-cards-section {
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.section_background_color }};
  }

  .collection-v2-cards-container {
    display: flex;
    gap: 8px;
    max-width: 100%;
    margin: 0;
    padding: 0 4px;
  }

  .collection-v2-card {
    flex: 1;
    position: relative;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    border-radius: 16px;
    cursor: pointer;
    transition: border-radius 0.4s ease 0.3s;
  }

  .collection-v2-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .collection-v2-card:hover {
    border-radius: 250px;
    transition: border-radius 0.4s ease 0s;
  }

  .collection-v2-card:hover .collection-v2-card-image {
    transform: scale(1.1);
  }

  .collection-v2-card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: {{ section.settings.overlay_color }};
  }

  .collection-v2-card-button {
    padding: 8px 20px;
    background: transparent;
    border: 2px solid {{ section.settings.primary_button_border_color }};
    border-radius: 50px;
    color: {{ section.settings.primary_button_text_color }};
    font-size: {{ section.settings.primary_button_font_size }}px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease, transform 0.4s ease;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    white-space: nowrap;
    transform: translateY(0);
  }

  .collection-v2-card-button:hover {
    background: {{ section.settings.primary_button_hover_bg }};
    color: {{ section.settings.primary_button_hover_text }};
    border-color: rgba(255, 255, 255, 0);
  }

  .collection-v2-card:hover .collection-v2-card-button {
    background: transparent;
    color: {{ section.settings.primary_button_text_color }};
    border-color: transparent;
    border-width: 2px;
  }

  .collection-v2-card:hover .collection-v2-card-button:hover {
    background: transparent;
    color: {{ section.settings.primary_button_text_color }};
    border-color: transparent;
  }

  .collection-v2-card-button-secondary {
    padding: 8px 20px;
    background: transparent;
    border: 2px solid {{ section.settings.secondary_button_border_color }};
    border-radius: 50px;
    color: {{ section.settings.secondary_button_text_color }};
    font-size: {{ section.settings.secondary_button_font_size }}px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    white-space: nowrap;
    opacity: 0;
    transition: opacity 0.3s ease, background 0.3s ease, color 0.3s ease, transform 0.4s ease;
    transform: translateY(0);
  }

  .collection-v2-card:hover .collection-v2-card-button-secondary {
    opacity: 1;
  }

  .collection-v2-card-button-secondary:hover {
    background: {{ section.settings.secondary_button_hover_bg }};
    color: {{ section.settings.secondary_button_hover_text }};
  }

  .collection-v2-card:hover .collection-v2-card-button,
  .collection-v2-card:hover .collection-v2-card-button-secondary {
    transform: translateY(-20px);
  }

  @media (max-width: 768px) {
    .collection-v2-cards-container {
      flex-wrap: nowrap;
      gap: 8px;
      padding: 0 16px;
      overflow-x: auto;
      overflow-y: hidden;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .collection-v2-cards-container::-webkit-scrollbar {
      display: none;
    }

    .collection-v2-card {
      flex: 0 0 calc(50% - 4px);
      min-width: calc(50% - 4px);
      scroll-snap-align: start;
      /* border-radius: 250px; */
    }

    .collection-v2-card-image {
      transform: scale(1.1);
    }

    .collection-v2-card-button {
      background: transparent;
      color: {{ section.settings.primary_button_text_color }};
      border-color: transparent;
    }

    .collection-v2-card-button-secondary {
      opacity: 1;
    }

    .collection-v2-card-button,
    .collection-v2-card-button-secondary {
      transform: translateY(-20px);
    }
  }

  @media (max-width: 480px) {
    .collection-v2-cards-container {
      padding: 0 16px;
    }

    .collection-v2-card {
      flex: 0 0 85%;
      min-width: 85%;
      scroll-snap-align: center;
      /* border-radius: 250px; */
    }

    .collection-v2-card-image {
      transform: scale(1.1);
    }

    .collection-v2-card-button {
      background: transparent;
      color: {{ section.settings.primary_button_text_color }};
      border-color: transparent;
    }

    .collection-v2-card-button-secondary {
      opacity: 1;
    }

    .collection-v2-card-button,
    .collection-v2-card-button-secondary {
      transform: translateY(-20px);
    }
  }
</style>

<div class="collection-v2-cards-section">
  <div class="collection-v2-cards-container">
    {% for i in (1..4) %}
      {% assign collection_setting = 'collection_' | append: i %}
      {% assign title_setting = 'title_' | append: i %}
      {% assign image_setting = 'image_' | append: i %}
      {% assign button_text_setting = 'button_text_' | append: i %}

      {% assign collection_handle = section.settings[collection_setting] %}
      {% assign custom_title = section.settings[title_setting] %}
      {% assign custom_image = section.settings[image_setting] %}
      {% assign button_text = section.settings[button_text_setting] %}

      {% if collection_handle != blank %}
        {% assign collection = collections[collection_handle] %}

        <a href="{{ collection.url }}" class="collection-v2-card">
          {% if custom_image != blank %}
            <img
              src="{{ custom_image | image_url: width: 600 }}"
              alt="{{ custom_title | default: collection.title }}"
              class="collection-v2-card-image"
              width="600"
              height="800"
              loading="lazy"
            >
          {% elsif collection.image %}
            <img
              src="{{ collection.image | image_url: width: 600 }}"
              alt="{{ collection.title }}"
              class="collection-v2-card-image"
              width="600"
              height="800"
              loading="lazy"
            >
          {% elsif collection.products.first and collection.products.first.featured_image %}
            <img
              src="{{ collection.products.first.featured_image | image_url: width: 600 }}"
              alt="{{ collection.title }}"
              class="collection-v2-card-image"
              width="600"
              height="800"
              loading="lazy"
            >
          {% else %}
            <img
              src="{{ 'placeholder.svg' | placeholder_svg_tag | asset_url }}"
              alt="{{ collection.title }}"
              class="collection-v2-card-image"
              width="600"
              height="800"
              loading="lazy"
            >
          {% endif %}

          <div class="collection-v2-card-overlay">
            <span class="collection-v2-card-button">
              {{ custom_title | default: collection.title }}
            </span>
            <span class="collection-v2-card-button-secondary">
              {{ button_text | default: 'Shop Now' }}
            </span>
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

