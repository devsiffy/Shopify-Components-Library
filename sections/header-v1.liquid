<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    overflow-x: hidden;
    max-width: 100%;
  }

  body {
    font-family: Arial
    , sans-serif;
  }

  .custom-navbar {
    background-color: {{ section.settings.nav_background }};
    border-top: {{ section.settings.border_thickness }}px solid {{ section.settings.border_color }};
    display: flex;
    justify-content: {% if section.settings.menu_alignment == 'left' %}flex-start{% elsif section.settings.menu_alignment == 'right' %}flex-end{% else %}center{% endif %};
    align-items: center;
    position: {% if section.settings.sticky_header == 'always' %}sticky{% else %}relative{% endif %};
    top: 0;
    width: {% if section.settings.width == 'page' %}100%{% else %}100vw{% endif %};
    height: {% if section.settings.height == 'compact' %}50px{% else %}70px{% endif %};
    overflow: visible;
    z-index: 999;
    padding: 0 20px;
    {% if section.settings.divider_thickness > 0 %}
    border-bottom: {{ section.settings.divider_thickness }}px solid {{ section.settings.border_color }};
    {% endif %}
  }

  .custom-navbar a,
  .custom-navbar .dropdown {
    font-size: {{ section.settings.font_size }}px;
    color: {{ section.settings.text_color }};
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
    display: inline-block;
  }

  .dropdown {
    position: static;
  }

  .dropdown .dropbtn {
    font-size: {{ section.settings.font_size }}px;
    border: none;
    outline: none;
    color: {{ section.settings.text_color }};
    padding: 14px 16px;
    background-color: inherit;
    font-family: Arial, sans-serif;
    margin: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .custom-navbar a:hover,
  .dropdown:hover .dropbtn {
    background-color: {{ section.settings.hover_background }};
  }

  .dropdown-content {
    position: absolute;
    right: 16px;
    top: 10px;
    z-index: 1001;
  }

  .nav-menu {
    display: none;
    width: 100%;
    flex-direction: column;
    background-color: #ffffff;
    position: absolute;
    top: 100%;
    box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.07);
    z-index: 1000;
    padding: 0 60px;
    flex-direction: row;
    gap: 50px;
    box-sizing: border-box;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-height 0.4s ease-out, opacity 0.3s ease-out, padding 0.4s ease-out;
  }

  @media (min-width: 901px) {
    .dropdown:hover .dropdown-content {
      display: flex;
      max-height: 500px;
      opacity: 1;
      padding: 25px 60px;
    }
  }

  .mega-left {
    min-width: 180px;
    display: flex;
  }

  .mega-left h3 {
    font-size: 18px;
    margin-bottom: 18px;
    color: #333;
  }

  .mega-left a {
    display: block;
    color: #777;
    padding: 10px 0;
    text-align: left;
    border-bottom: 1px solid #e5e5e5;
    padding: 14px 20px;
  }

  .mega-left a:hover {
    color: #000;
    background: none;
  }

  .mega-right {
    display: flex;
    gap: 30px;
    animation: slideInRight 0.5s ease-out;
  }

  .mega-card {
    position: relative;
    width: 270px;
    height: 170px;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 1px 8px rgba(0, 0, 0, 0.2);
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .mega-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  .mega-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .mega-card-title {
    position: absolute;
    bottom: 10px;
    left: 14px;
    color: #fff;
    font-weight: 600;
    font-size: 20px;
    text-shadow: 0 2px 6px rgba(0, 0, 0, 0.7);
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
    padding: 14px 16px;
    background: none;
    border: none;
  }

  .hamburger span {
    width: 25px;
    height: 3px;
    background-color: #000;
    margin: 3px 0;
    transition: 0.4s;
    display: block;
  }

  .hamburger.active span:nth-child(1) {
    transform: rotate(-45deg) translate(-5px, 6px);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: rotate(45deg) translate(-5px, -6px);
  }

  .nav-menu {
    display: flex;
    align-items: center;
  }

  @media (max-width: 900px) {
    .custom-navbar {
      flex-direction: column;
      align-items: flex-start;
      padding: 0;
      min-height: 50px;
    }

    .hamburger {
      display: flex;
      position: absolute;
      right: 16px;
      top: 10px;
      z-index: 1001;
    }

    .nav-menu {
      display: none;
      width: 100%;
      flex-direction: column;
      background-color: #ffffff;
      position: absolute;
      top: 100%;
      left: 0;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      z-index: 1000;
    }

    .nav-menu.active {
      display: flex;
    }

    .nav-menu > a {
      width: 100%;
      text-align: left;
      border-bottom: 1px solid #e5e5e5;
      padding: 14px 20px;
    }

    .nav-menu > .dropdown {
      width: 100%;
      position: relative;
    }

    .dropdown .dropbtn {
      width: 100%;
      justify-content: space-between;
      text-align: left;
      border-bottom: 1px solid #e5e5e5;
    }

    .dropdown-content {
      position: static;
      width: 100%;
      left: 0;
      transform: none;
      box-shadow: none;
      background-color: #f5f5f5;
      padding: 0;
      flex-direction: column;
      gap: 0;
      display: none;
    }

    .dropdown-content.active {
      display: flex !important;
      max-height: 1000px !important;
      opacity: 1 !important;
      padding: 10px 0 !important;
      overflow: visible !important;
    }

    .mega-left {
      width: 100%;
      min-width: 100%;
      padding: 0 20px;
      animation: none;
    }

    .mega-left h3 {
      font-size: 16px;
      margin-bottom: 10px;
    }

    .mega-left a {
      padding: 12px 0;
      font-size: 15px;
      border-bottom: 1px solid #e0e0e0;
    }

    .mega-right {
      display: none;
    }
  }
</style>

<div class="custom-navbar">
  <button class="hamburger" id="hamburger-{{ section.id }}">
    <span></span>
    <span></span>
    <span></span>
  </button>

  <div class="nav-menu" id="navMenu-{{ section.id }}">
    {% for block in section.blocks %}
      {% if block.type == 'link' %}
        <a href="{{ block.settings.link }}">{{ block.settings.label }}</a>

      {% elsif block.type == 'mega_menu' %}
        <div class="dropdown">
          <button class="dropbtn" data-dropdown="{{ block.id }}">
            {{ block.settings.menu_title }}
            <i class="fa fa-caret-down"></i>
          </button>
          <div class="dropdown-content" id="{{ block.id }}">
            <div class="mega-left">
              <h3>{{ block.settings.category_title }}</h3>
              {% if block.settings.menu_links != blank %}
                {% for link in linklists[block.settings.menu_links].links %}
                  <a href="{{ link.url }}">{{ link.title }}</a>
                {% endfor %}
              {% endif %}
            </div>
            <div class="mega-right">
              {% if block.settings.card1_image != blank %}
                <div class="mega-card">
                  <img src="{{ block.settings.card1_image | img_url: '600x400', crop: 'center' }}" alt="{{ block.settings.card1_title }}">
                  <div class="mega-card-title">{{ block.settings.card1_title }}</div>
                </div>
              {% endif %}

              {% if block.settings.card2_image != blank %}
                <div class="mega-card">
                  <img src="{{ block.settings.card2_image | img_url: '600x400', crop: 'center' }}" alt="{{ block.settings.card2_title }}">
                  <div class="mega-card-title">{{ block.settings.card2_title }}</div>
                </div>
              {% endif %}

              {% if block.settings.card3_image != blank %}
                <div class="mega-card">
                  <img src="{{ block.settings.card3_image | img_url: '600x400', crop: 'center' }}" alt="{{ block.settings.card3_title }}">
                  <div class="mega-card-title">{{ block.settings.card3_title }}</div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<script>
  (function() {
    const hamburger = document.getElementById('hamburger-{{ section.id }}');
    const navMenu = document.getElementById('navMenu-{{ section.id }}');
    const dropdownButtons = document.querySelectorAll('#navMenu-{{ section.id }} .dropbtn');
    
    hamburger.addEventListener('click', function(e) {
      e.stopPropagation();
      this.classList.toggle('active');
      navMenu.classList.toggle('active');
    });
    
    dropdownButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        if (window.innerWidth <= 900) {
          e.preventDefault();
          e.stopPropagation();
          const dropdownId = this.getAttribute('data-dropdown');
          const dropdownContent = document.getElementById(dropdownId);
          
          document.querySelectorAll('.dropdown-content').forEach(content => {
            if (content.id !== dropdownId) {
              content.classList.remove('active');
            }
          });
          
          dropdownContent.classList.toggle('active');
        }
      });
    });
    
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.custom-navbar')) {
        navMenu.classList.remove('active');
        hamburger.classList.remove('active');
        document.querySelectorAll('.dropdown-content').forEach(content => {
          content.classList.remove('active');
        });
      }
    });
  })();
</script>

{% schema %}
{
  "name": "Mega Menu Navigation",
  "class": "mega-menu-section",
  "settings": [
    {
      "type": "header",
      "content": "Position"
    },
    {
      "type": "select",
      "id": "menu_alignment",
      "label": "Menu Position",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "options": [
        { "value": "page", "label": "Page" },
        { "value": "full", "label": "Full" }
      ],
      "default": "page"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Height",
      "options": [
        { "value": "compact", "label": "Compact" },
        { "value": "standard", "label": "Standard" }
      ],
      "default": "standard"
    },
    {
      "type": "select",
      "id": "sticky_header",
      "label": "Sticky Header",
      "options": [
        { "value": "always", "label": "Always" },
        { "value": "never", "label": "Never" }
      ],
      "default": "always"
    },
    {
      "type": "range",
      "id": "divider_thickness",
      "label": "Divider thickness",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "border_thickness",
      "label": "Border thickness",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "nav_background",
      "label": "Navigation Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "hover_background",
      "label": "Hover Background",
      "default": "#f0f0f0"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#e5e5e5"
    },
    {
      "type": "color",
      "id": "dropdown_background",
      "label": "Dropdown Background",
      "default": "#f9f9f9"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "font_size",
      "label": "Font Size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    }
  ],

  "blocks": [
    {
      "type": "link",
      "name": "Navigation Link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Link Label",
          "default": "Menu Item"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    },
    {
      "type": "mega_menu",
      "name": "Mega Menu Dropdown",
      "settings": [
        {
          "type": "text",
          "id": "menu_title",
          "label": "Menu Title",
          "default": "Dropdown"
        },
        {
          "type": "text",
          "id": "category_title",
          "label": "Category Title",
          "default": "Categories"
        },
        {
          "type": "link_list",
          "id": "menu_links",
          "label": "Menu Links",
          "info": "Select a menu from Navigation settings"
        },

        { "type": "header", "content": "Featured Card 1" },
        {
          "type": "image_picker",
          "id": "card1_image",
          "label": "Card 1 Image"
        },
        {
          "type": "text",
          "id": "card1_title",
          "label": "Card 1 Title",
          "default": "Featured Item"
        },

        { "type": "header", "content": "Featured Card 2" },
        {
          "type": "image_picker",
          "id": "card2_image",
          "label": "Card 2 Image"
        },
        {
          "type": "text",
          "id": "card2_title",
          "label": "Card 2 Title",
          "default": "Featured Item"
        },

        { "type": "header", "content": "Featured Card 3" },
        {
          "type": "image_picker",
          "id": "card3_image",
          "label": "Card 3 Image"
        },
        {
          "type": "text",
          "id": "card3_title",
          "label": "Card 3 Title",
          "default": "Featured Item"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Mega Menu Navigation",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "label": "Home",
            "link": "/"
          }
        },
        {
          "type": "link",
          "settings": {
            "label": "Shop",
            "link": "/collections"
          }
        },
        {
          "type": "mega_menu",
          "settings": {
            "menu_title": "Browse",
            "category_title": "Collections"
          }
        }
      ]
    }
  ]
}
{% endschema %}
