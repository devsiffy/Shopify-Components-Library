      <h2 class="section-title">{{ section.settings.components_heading }}</h2>
      <p class="section-description">{{ section.settings.components_description }}</p>
    </div>

    <div class="components-grid">
      {% for block in section.blocks %}
        <div class="component-card" {{ block.shopify_attributes }}>
          <div class="card-image">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="{{ block.settings.title | escape }}"
                width="600"
                height="400"
                loading="lazy">
            {% else %}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>

          <div class="card-content">
            <div class="card-header">
              <div class="card-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
                </svg>
              </div>
              <h3 class="card-title">{{ block.settings.title }}</h3>
            </div>
            <p class="card-description">{{ block.settings.description }}</p>
            {% if block.settings.button_text != blank %}
              {% if block.settings.component_page != blank %}
                <a href="{{ pages[block.settings.component_page].url }}" class="card-button">
                  {{ block.settings.button_text }}
                </a>
              {% else %}
                <button class="card-button" disabled>
                  {{ block.settings.button_text }}
                </button>
              {% endif %}
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- CTA Section -->
  {% if section.settings.show_cta %}
    <section class="cta-section">
      <div class="cta-container">
        <h2 class="cta-title">{{ section.settings.cta_heading }}</h2>
        <p class="cta-description">{{ section.settings.cta_description }}</p>
        <div class="cta-buttons">
          {% if section.settings.cta_button_1_text != blank %}
            <a href="{{ section.settings.cta_button_1_url }}" class="hero-btn hero-btn-primary">
              {{ section.settings.cta_button_1_text }}
            </a>
          {% endif %}
          {% if section.settings.cta_button_2_text != blank %}
            <a href="{{ section.settings.cta_button_2_url }}" class="hero-btn hero-btn-secondary">
              {{ section.settings.cta_button_2_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </section>
  {% endif %}

  <!-- Footer -->
  {% if section.settings.show_footer %}
    <footer class="library-footer">
      <div class="footer-content">
        <p class="footer-text">{{ section.settings.footer_text }}</p>
        <div class="footer-links">
          {% if section.settings.footer_link_1_text != blank %}
            <a href="{{ section.settings.footer_link_1_url }}" class="footer-link">
              {{ section.settings.footer_link_1_text }}
            </a>
          {% endif %}
          {% if section.settings.footer_link_2_text != blank %}
            <a href="{{ section.settings.footer_link_2_url }}" class="footer-link">
              {{ section.settings.footer_link_2_text }}
            </a>
          {% endif %}
          {% if section.settings.footer_link_3_text != blank %}
            <a href="{{ section.settings.footer_link_3_url }}" class="footer-link">
              {{ section.settings.footer_link_3_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </footer>
  {% endif %}
</div>

