<style>
  .component-library-wrapper {
    width: 100%;
    background-color: hsl(var(--bg-color, 0 0% 100%));
    color: hsl(var(--text-color, 222.2 84% 4.9%));
  }

  /* Hero Section */
  .hero-section {
    padding: 80px 24px 128px;
    text-align: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-logo-container {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    background: linear-gradient(135deg, #16A34A, #22C55E);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 30px rgba(22, 163, 74, 0.3);
    animation: scaleIn 0.5s ease-out;
  }

  .hero-logo-container svg {
    width: 40px;
    height: 40px;
    color: white;
  }

  .hero-subtitle {
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #16A34A;
    margin-bottom: 24px;
    animation: slideIn 0.6s ease-out;
  }

  .hero-title {
    font-size: 56px;
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 24px;
    letter-spacing: -1.5px;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-description {
    font-size: 20px;
    line-height: 1.6;
    color: #6B7280;
    max-width: 700px;
    margin: 0 auto 40px;
    animation: fadeInUp 0.8s ease-out 0.1s both;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero-btn {
    padding: 14px 28px;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    text-decoration: none;
    border: none;
  }

  .hero-btn-primary {
    background-color: #16A34A;
    color: white;
  }

  .hero-btn-primary:hover {
    background-color: #15803D;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(22, 163, 74, 0.3);
  }

  .hero-btn-secondary {
    background-color: #111827;
    color: white;
    border: 1px solid #111827;
  }

  .hero-btn-secondary:hover {
    background-color: #1F2937;
    transform: translateY(-2px);
  }

  .hero-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Components Grid Section */
  .components-section {
    padding: 64px 24px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .section-title {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 16px;
    animation: fadeIn 0.6s ease-out;
  }

  .section-description {
    font-size: 18px;
    color: #6B7280;
  }

  .components-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 24px;
    animation: fadeIn 0.6s ease-out;
  }

  .component-card {
    background: white;
    border: 1px solid #E5E7EB;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .component-card:hover {
    border-color: rgba(22, 163, 74, 0.5);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .component-card:hover .card-image img {
    transform: scale(1.1);
  }

  .card-image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #F3F4F6;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .card-content {
    padding: 24px;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .card-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: rgba(22, 163, 74, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease;
  }

  .component-card:hover .card-icon {
    background: rgba(22, 163, 74, 0.2);
  }

  .card-icon svg {
    width: 20px;
    height: 20px;
    color: #16A34A;
  }

  .card-title {
    font-size: 20px;
    font-weight: 600;
    color: #111827;
    transition: color 0.3s ease;
  }

  .component-card:hover .card-title {
    color: #16A34A;
  }

  .card-description {
    font-size: 15px;
    color: #6B7280;
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .card-button {
    width: 100%;
    padding: 10px 20px;
    background: transparent;
    color: #111827;
    border: 1px solid #E5E7EB;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .component-card:hover .card-button {
    background: #16A34A;
    color: white;
    border-color: #16A34A;
  }

  /* CTA Section */
  .cta-section {
    padding: 80px 24px;
    background: #F9FAFB;
    text-align: center;
  }

  .cta-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 16px;
  }

  .cta-description {
    font-size: 18px;
    color: #6B7280;
    margin-bottom: 32px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Footer */
  .library-footer {
    padding: 32px 24px;
    border-top: 1px solid #E5E7EB;
  }

  .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .footer-text {
    font-size: 14px;
    color: #6B7280;
  }

  .footer-links {
    display: flex;
    gap: 24px;
  }

  .footer-link {
    font-size: 14px;
    color: #6B7280;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-link:hover {
    color: #111827;
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-section {
      padding: 60px 20px 80px;
    }

    .hero-title {
      font-size: 36px;
    }

    .hero-description {
      font-size: 16px;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .hero-btn {
      width: 100%;
      justify-content: center;
    }

    .section-title {
      font-size: 32px;
    }

    .components-grid {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: 32px;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

