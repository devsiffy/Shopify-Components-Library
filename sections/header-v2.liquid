<script>
(function() {
  'use strict';
  
  const toggle = document.getElementById('header-v2-toggle');
  const mobile = document.getElementById('header-v2-mobile');
  const overlay = document.getElementById('header-v2-overlay');
  const closeBtn = document.getElementById('header-v2-close');
  const dropdownBtns = document.querySelectorAll('.header-v2__mobile-dropdown .header-v2__mobile-link');
  
  if (toggle && mobile && overlay) {
    const toggleMenu = () => {
      const isActive = toggle.classList.toggle('is-active');
      mobile.classList.toggle('is-active');
      overlay.classList.toggle('is-active');
      toggle.setAttribute('aria-expanded', isActive);
      document.body.style.overflow = isActive ? 'hidden' : '';
    };
    
    const closeMenu = () => {
      toggle.classList.remove('is-active');
      mobile.classList.remove('is-active');
      overlay.classList.remove('is-active');
      toggle.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
    };
    
    toggle.addEventListener('click', toggleMenu);
    overlay.addEventListener('click', closeMenu);
    if (closeBtn) closeBtn.addEventListener('click', closeMenu);
    
    dropdownBtns.forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        const dropdown = this.closest('.header-v2__mobile-dropdown');
        const isActive = dropdown.classList.contains('is-active');
        
        dropdownBtns.forEach(otherBtn => {
          const other = otherBtn.closest('.header-v2__mobile-dropdown');
          if (other !== dropdown) {
            other.classList.remove('is-active');
            otherBtn.setAttribute('aria-expanded', 'false');
          }
        });
        
        dropdown.classList.toggle('is-active');
        this.setAttribute('aria-expanded', !isActive);
      });
    });
    
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape' && mobile.classList.contains('is-active')) {
        closeMenu();
      }
    });
    
    window.addEventListener('resize', () => {
      if (window.innerWidth >= 1024) {
        closeMenu();
      }
    });
  }
})();
</script>

