<style>
  .component-variants-wrapper {
    width: 100%;
    padding: 60px 0;
    background: #ffffff;
  }

  .component-variants-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .component-variants-header {
    margin-bottom: 48px;
  }

  .component-variants-title {
    font-size: 42px;
    font-weight: 700;
    color: #000000;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .component-variants-description {
    font-size: 18px;
    font-weight: 400;
    color: #6b7280;
    margin: 0;
    line-height: 1.6;
    max-width: 800px;
  }

  .variants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 32px;
    margin-bottom: 48px;
  }

  .variant-card {
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .variant-card:hover {
    border-color: #16A34A;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .variant-preview-box {
    width: 100%;
    background: #ffffff;
    border-bottom: 1px solid #e5e7eb;
  }

  .variant-preview-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 20px;
    background: #f9fafb;
    border-bottom: 1px solid #e5e7eb;
  }

  .variant-preview-title {
    font-size: 14px;
    font-weight: 600;
    color: #000000;
    margin: 0;
  }

  .variant-preview-tabs {
    display: flex;
    gap: 0;
  }

  .variant-tab-btn {
    padding: 6px 12px;
    font-size: 13px;
    font-weight: 500;
    color: #6b7280;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .variant-tab-btn:first-child {
    border-radius: 6px 0 0 6px;
  }

  .variant-tab-btn:last-child {
    border-radius: 0 6px 6px 0;
    border-left: none;
  }

  .variant-tab-btn:hover {
    color: #000000;
    background: #f3f4f6;
  }

  .variant-tab-btn.active {
    color: #ffffff;
    background: #000000;
    border-color: #000000;
    z-index: 1;
  }

  .variant-iframe-wrapper {
    width: 100%;
    min-height: 450px;
    background: #fafafa;
    display: block;
  }

  .variant-iframe-wrapper.hidden {
    display: none;
  }

  .variant-iframe-wrapper iframe {
    width: 100%;
    height: 100%;
    min-height: 450px;
    border: none;
    display: block;
  }

  .variant-code-wrapper {
    display: none;
    width: 100%;
    min-height: 450px;
    background: #1e293b;
    padding: 20px;
    overflow: auto;
  }

  .variant-code-wrapper.active {
    display: block;
  }

  .variant-code-wrapper pre {
    margin: 0;
    color: #e2e8f0;
    font-family: 'Courier New'
    , monospace;
    font-size: 13px;
    line-height: 1.6;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .variant-preview-image {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    display: block;
  }

  .variant-content {
    padding: 24px;
  }

  .variant-name {
    font-size: 20px;
    font-weight: 600;
    color: #000000;
    margin: 0 0 12px;
  }

  .variant-description {
    font-size: 15px;
    color: #6b7280;
    line-height: 1.6;
    margin: 0 0 20px;
  }

  .variant-actions {
    display: flex;
    gap: 12px;
  }

  .variant-btn {
    flex: 1;
    padding: 10px 16px;
    font-size: 14px;
    font-weight: 500;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    border: none;
  }

  .variant-btn-primary {
    background: #16A34A;
    color: white;
  }

  .variant-btn-primary:hover {
    background: #15803D;
    transform: translateY(-2px);
  }

  .variant-btn-secondary {
    background: transparent;
    color: #000000;
    border: 1px solid #e5e7eb;
  }

  .variant-btn-secondary:hover {
    background: #f9fafb;
    border-color: #d1d5db;
  }

  .variant-btn svg {
    width: 16px;
    height: 16px;
  }

  .no-variants-message {
    text-align: center;
    padding: 80px 20px;
    color: #6b7280;
    font-size: 16px;
  }

  @media (max-width: 768px) {
    .component-variants-wrapper {
      padding: 40px 0;
    }

    .component-variants-container {
      padding: 0 20px;
    }

    .component-variants-title {
      font-size: 32px;
    }

    .variants-grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .variant-actions {
      flex-direction: column;
    }

    .variant-btn {
      width: 100%;
    }
  }
</style>

<section class="component-variants-wrapper">
  <div class="component-variants-container">

    {%- comment -%} Get the component data from page metafield {%- endcomment -%}
    {%- assign component_metaobject = page.metafields.custom.component_reference.value -%}

      {%- if component_metaobject -%}
      <div class="component-variants-header">
        <h1 class="component-variants-title">{{ component_metaobject.component_name.value }}</h1>
        <p class="component-variants-description">{{ component_metaobject.component_description.value }}</p>
      </div>

      {%- comment -%} Check if variants exist {%- endcomment -%}
      {%- if component_metaobject.variants.value.size > 0 -%}
        <div class="variants-grid">
          {%- for variant in component_metaobject.variants.value -%}
            <div class="variant-card">

              {%- comment -%} Preview Box with Tabs {%- endcomment -%}
              <div class="variant-preview-box">
                <div class="variant-preview-header">
                  <h3 class="variant-preview-title">{{ variant.variant_name.value }}</h3>
                  <div class="variant-preview-tabs">
                    <button
                      class="variant-tab-btn active"
                      data-target="preview-{{ forloop.index }}"
                      onclick="switchTab(event, 'preview-{{ forloop.index }}')">
                      Preview
                    </button>
                    <button
                      class="variant-tab-btn"
                      data-target="code-{{ forloop.index }}"
                      onclick="switchTab(event, 'code-{{ forloop.index }}')">
                      Code
                    </button>
                  </div>
                </div>

                {%- comment -%} Preview Tab Content {%- endcomment -%}
                <div id="preview-{{ forloop.index }}" class="variant-iframe-wrapper tab-content">
                  {%- if variant.demo_url.value != blank -%}
                    <iframe
                      src="{{ variant.demo_url.value }}"
                      width="100%"
                      height="450"
                      title="{{ variant.variant_name.value }}"
                      loading="lazy"></iframe>
                  {%- elsif variant.preview_image.value -%}
                    <img
                      src="{{ variant.preview_image.value | image_url: width: 800 }}"
                      alt="{{ variant.variant_name.value }}"
                      class="variant-preview-image"
                      loading="lazy"
                      width="100"
                      height="100">
                  {%- else -%}
                    <div style="display: flex; align-items: center; justify-content: center; min-height: 450px; color: #9ca3af;">
                      No preview available
                    </div>
                  {%- endif -%}
                </div>

                {%- comment -%} Code Tab Content {%- endcomment -%}
                <div id="code-{{ forloop.index }}" class="variant-code-wrapper tab-content">
<pre><code>{{ variant.code_snippet.value | escape }}</code></pre>
                </div>
              </div>

              {%- comment -%} Variant Info and Actions {%- endcomment -%}
              <div class="variant-content">
                <h2 class="variant-name">{{ variant.variant_name.value }}</h2>
                {%- if variant.description.value != blank -%}
                  <p class="variant-description">{{ variant.description.value }}</p>
                {%- endif -%}

                <div class="variant-actions">
                  <button class="variant-btn variant-btn-primary" onclick="copyCode{{ forloop.index }}()">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184" />
                    </svg>
                    Copy Code
                  </button>

                  {%- if variant.demo_url.value != blank -%}
                    <a
                      href="{{ variant.demo_url.value }}"
                      target="_blank"
                      class="variant-btn variant-btn-secondary">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
                      </svg>
                      View Demo
                    </a>
                  {%- endif -%}
                </div>

                <script>
                  function copyCode{{ forloop.index }}() {
                    const codeText = {{ variant.code_snippet.value | json }};
                    navigator.clipboard.writeText(codeText).then(() => {
                      alert('Code copied to clipboard!');
                    }).catch(err => {
                      console.error('Failed to copy:', err);
                    });
                  }
                </script>
              </div>
            </div>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="no-variants-message">
          <p>No variants available for this component yet.</p>
        </div>
      {%- endif -%}

    {%- else -%}
      <div class="no-variants-message">
        <p>No component data found. Please assign a component metaobject to this page.</p>
      </div>
    {%- endif -%}
  </div>
</section>

<script>
  function switchTab(event, targetId) {
    const button = event.currentTarget;
    const previewBox = button.closest('.variant-preview-box');
    
    // Remove active class from all tabs in this preview box
    previewBox.querySelectorAll('.variant-tab-btn').forEach(btn => {
      btn.classList.remove('active');
    });
    
    // Add active class to clicked button
    button.classList.add('active');
    
    // Hide all tab contents in this preview box
    previewBox.querySelectorAll('.tab-content').forEach(content => {
      if (content.classList.contains('variant-iframe-wrapper')) {
        content.classList.add('hidden');
      } else if (content.classList.contains('variant-code-wrapper')) {
        content.classList.remove('active');
      }
    });
    
    // Show target content
    const targetContent = document.getElementById(targetId);
    if (targetContent.classList.contains('variant-iframe-wrapper')) {
      targetContent.classList.remove('hidden');
    } else if (targetContent.classList.contains('variant-code-wrapper')) {
      targetContent.classList.add('active');
    }
  }
</script>

{% schema %}
  {
    "name": "Component Variants",
    "tag": "section",
    "class": "component-variants-section",
    "settings": []
  }
{% endschema %}