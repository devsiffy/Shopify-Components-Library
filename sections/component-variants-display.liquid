<style>
  .header-showcase-section {
    width: 100%;
    padding: 60px 0;
    background: #ffffff;
  }

  .header-showcase-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 32px;
  }

  .header-showcase-title {
    font-size: 36px;
    font-weight: 700;
    color: #000000;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .header-showcase-description {
    font-size: 16px;
    font-weight: 400;
    color: #6b7280;
    margin: 0 0 48px;
    line-height: 1.6;
    max-width: 800px;
  }

  .header-showcase-variant-wrapper {
    margin-bottom: 60px;
  }

  .header-showcase-variant-wrapper:last-child {
    margin-bottom: 0;
  }

  .header-showcase-box-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16px;
    gap: 20px;
  }

  .header-showcase-box-title {
    font-size: 18px;
    font-weight: 600;
    color: #000000;
    margin: 0;
    line-height: 1.3;
  }

  .header-showcase-box-actions {
    display: flex;
    align-items: center;
    gap: 0;
  }

  .header-showcase-tab-btn {
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 500;
    color: #6b7280;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .header-showcase-tab-btn:first-child {
    border-radius: 6px 0 0 6px;
  }

  .header-showcase-tab-btn:last-child {
    border-radius: 0 6px 6px 0;
    border-left: none;
  }

  .header-showcase-tab-btn:hover {
    color: #000000;
    background: #f9fafb;
  }

  .header-showcase-tab-btn.active {
    color: #ffffff;
    background: #000000;
    border-color: #000000;
    z-index: 1;
  }

  .header-showcase-preview-box {
    width: 100%;
    min-height: 600px;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
  }

  .header-showcase-content-wrapper {
    width: 100%;
    height: 100%;
    min-height: 600px;
  }

  .header-showcase-iframe-wrapper {
    width: 100%;
    height: 100%;
    min-height: 600px;
    background: #fafafa;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header-showcase-iframe-wrapper iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  .header-showcase-iframe-wrapper img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .header-showcase-code-wrapper {
    width: 100%;
    height: 100%;
    min-height: 600px;
    background: #1e1e1e;
    padding: 24px;
    overflow: auto;
    display: none;
  }

  .header-showcase-code-wrapper.active {
    display: block;
  }

  .header-showcase-code-wrapper pre {
    margin: 0;
    color: #d4d4d4;
    font-size: 14px;
    line-height: 1.6;
    white-space: pre-wrap;
    word-wrap: break-word;
  }

  .header-showcase-placeholder {
    text-align: center;
    padding: 60px 40px;
  }

  .header-showcase-placeholder svg {
    width: 180px;
    height: 180px;
    opacity: 0.3;
    margin-bottom: 20px;
  }

  .header-showcase-placeholder p {
    font-size: 15px;
    color: #9ca3af;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .header-showcase-container {
      padding: 0 24px;
    }
  }

  @media (max-width: 768px) {
    .header-showcase-section {
      padding: 40px 0;
    }

    .header-showcase-container {
      padding: 0 20px;
    }

    .header-showcase-title {
      font-size: 28px;
      margin-bottom: 12px;
    }

    .header-showcase-description {
      font-size: 15px;
      margin-bottom: 32px;
    }

    .header-showcase-variant-wrapper {
      margin-bottom: 40px;
    }

    .header-showcase-box-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .header-showcase-box-actions {
      width: 100%;
    }

    .header-showcase-tab-btn {
      flex: 1;
      text-align: center;
    }

    .header-showcase-preview-box {
      min-height: 500px;
    }

    .header-showcase-content-wrapper {
      min-height: 500px;
    }

    .header-showcase-iframe-wrapper {
      min-height: 500px;
    }

    .header-showcase-code-wrapper {
      min-height: 500px;
      padding: 16px;
    }
  }

  @media (max-width: 480px) {
    .header-showcase-container {
      padding: 0 16px;
    }

    .header-showcase-title {
      font-size: 24px;
    }

    .header-showcase-tab-btn {
      padding: 7px 12px;
      font-size: 13px;
    }

    .header-showcase-preview-box {
      min-height: 450px;
    }

    .header-showcase-content-wrapper {
      min-height: 450px;
    }

    .header-showcase-iframe-wrapper {
      min-height: 450px;
    }

    .header-showcase-code-wrapper {
      min-height: 450px;
      padding: 12px;
    }

    .header-showcase-code-wrapper pre {
      font-size: 12px;
    }
  }
</style>

{% if page.metafields.custom.component_reference.value %}
  {% assign component = page.metafields.custom.component_reference.value %}

  <section class="header-showcase-section">
    <div class="header-showcase-container">
      <h2 class="header-showcase-title">
        {% if component.component_name.value != blank %}
          {{ component.component_name.value }}
        {% else %}
          {{ section.settings.section_title }}
        {% endif %}
      </h2>

      <p class="header-showcase-description">
        {% if component.component_description.value != blank %}
          {{ component.component_description.value }}
        {% else %}
          {{ section.settings.section_description }}
        {% endif %}
      </p>

      {% if component.variants.value %}
        {% for variant in component.variants.value %}
          <div class="header-showcase-variant-wrapper" data-variant-index="{{ forloop.index }}">
            <div class="header-showcase-box-header">
              <h3 class="header-showcase-box-title">
                {% if variant.variant_name.value != blank %}
                  {{ variant.variant_name.value }}
                {% else %}
                  Variant {{ forloop.index }}
                {% endif %}
              </h3>

              <div class="header-showcase-box-actions">
                <button
                  class="header-showcase-tab-btn {% if forloop.first %}active{% endif %}"
                  type="button"
                  data-tab="preview"
                  data-variant="{{ forloop.index }}"
                >
                  {{ section.settings.preview_button_text }}
                </button>
                <button
                  class="header-showcase-tab-btn"
                  type="button"
                  data-tab="code"
                  data-variant="{{ forloop.index }}"
                >
                  {{ section.settings.code_button_text }}
                </button>
              </div>
            </div>

            <div class="header-showcase-preview-box">
              <div class="header-showcase-content-wrapper">
                <div
                  class="header-showcase-iframe-wrapper"
                  data-content="preview"
                  data-variant="{{ forloop.index }}"
                  style="min-height: {{ section.settings.iframe_height }}px;"
                >
                  {% if variant.demo_url.value != blank %}
                    <iframe
                      src="{{ variant.demo_url.value }}"
                      width="100%"
                      height="{{ section.settings.iframe_height }}"
                      title="{% if variant.variant_name.value != blank %}{{ variant.variant_name.value }}{% else %}Variant {{ forloop.index }}{% endif %}"
                      loading="lazy"
                    ></iframe>
                  {% elsif variant.preview_image.value %}
                    {% assign preview_img = variant.preview_image.value %}
                    <img
                      src="{{ preview_img | image_url: width: 1200 }}"
                      alt="{% if variant.variant_name.value != blank %}{{ variant.variant_name.value }}{% else %}Variant {{ forloop.index }}{% endif %}"
                      width="1200"
                      height="800"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="header-showcase-placeholder">
                      {{ 'lifestyle-2' | placeholder_svg_tag }}
                      <p>Add a Demo URL or Preview Image to this variant</p>
                    </div>
                  {% endif %}
                </div>

                <div
                  class="header-showcase-code-wrapper"
                  data-content="code"
                  data-variant="{{ forloop.index }}"
                  style="min-height: {{ section.settings.iframe_height }}px;"
                >
                  {% if variant.code_snippet.value != blank %}
                    <pre><code>{{ variant.code_snippet.value }}</code></pre>
                  {% else %}
                    <div class="header-showcase-placeholder">
                      {{ 'code' | placeholder_svg_tag }}
                      <p>Add Code Snippet to this variant</p>
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <div class="header-showcase-variant-wrapper">
          <div class="header-showcase-box-header">
            <h3 class="header-showcase-box-title">{{ section.settings.box_title }}</h3>

            <div class="header-showcase-box-actions">
              <button class="header-showcase-tab-btn active" type="button">
                {{ section.settings.preview_button_text }}
              </button>
              <button class="header-showcase-tab-btn" type="button">
                {{ section.settings.code_button_text }}
              </button>
            </div>
          </div>

          <div class="header-showcase-preview-box">
            <div class="header-showcase-iframe-wrapper" style="min-height: {{ section.settings.iframe_height }}px;">
              <div class="header-showcase-placeholder">
                {{ 'lifestyle-2' | placeholder_svg_tag }}
                <p>No variants found. Add Component Variants to the metaobject.</p>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </section>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const variantWrappers = document.querySelectorAll('.header-showcase-variant-wrapper');

      variantWrappers.forEach((wrapper) => {
        const variantIndex = wrapper.getAttribute('data-variant-index');
        const tabButtons = wrapper.querySelectorAll('.header-showcase-tab-btn');
        const previewWrapper = wrapper.querySelector('[data-content="preview"][data-variant="' + variantIndex + '"]');
        const codeWrapper = wrapper.querySelector('[data-content="code"][data-variant="' + variantIndex + '"]');

        tabButtons.forEach((button) => {
          button.addEventListener('click', function () {
            const tab = this.getAttribute('data-tab');

            tabButtons.forEach((btn) => btn.classList.remove('active'));
            this.classList.add('active');

            if (tab === 'preview') {
              previewWrapper.style.display = 'flex';
              codeWrapper.style.display = 'none';
            } else if (tab === 'code') {
              previewWrapper.style.display = 'none';
              codeWrapper.style.display = 'block';
            }
          });
        });
      });
    });
  </script>

{% else %}
  <section class="header-showcase-section">
    <div class="header-showcase-container">
      <h2 class="header-showcase-title">{{ section.settings.section_title }}</h2>
      <p class="header-showcase-description">{{ section.settings.section_description }}</p>

      <div class="header-showcase-variant-wrapper">
        <div class="header-showcase-box-header">
          <h3 class="header-showcase-box-title">{{ section.settings.box_title }}</h3>

          <div class="header-showcase-box-actions">
            <button class="header-showcase-tab-btn active" type="button">
              {{ section.settings.preview_button_text }}
            </button>
            <button class="header-showcase-tab-btn" type="button">
              {{ section.settings.code_button_text }}
            </button>
          </div>
        </div>

        <div class="header-showcase-preview-box">
          <div class="header-showcase-iframe-wrapper" style="min-height: {{ section.settings.iframe_height }}px;">
            <div class="header-showcase-placeholder">
              {{ 'lifestyle-2' | placeholder_svg_tag }}
              <p>Add Component Reference metafield to this page to display content</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

{% schema %}
{
  "name": "Component Showcase",
  "tag": "section",
  "class": "header-showcase-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Fallback Content"
    },
    {
      "type": "paragraph",
      "content": "These settings are used when no Component Reference metafield is assigned to the page."
    },
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Component Library"
    },
    {
      "type": "textarea",
      "id": "section_description",
      "label": "Section Description",
      "default": "Explore our collection of customizable components built for modern websites."
    },
    {
      "type": "header",
      "content": "Preview Box Settings"
    },
    {
      "type": "text",
      "id": "box_title",
      "label": "Box Title",
      "default": "Component Example"
    },
    {
      "type": "text",
      "id": "preview_button_text",
      "label": "Preview Button Text",
      "default": "Preview"
    },
    {
      "type": "text",
      "id": "code_button_text",
      "label": "Code Button Text",
      "default": "Code"
    },
    {
      "type": "range",
      "id": "iframe_height",
      "label": "Content Height",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "default": 600
    }
  ],
  "presets": [
    {
      "name": "Component Showcase Section"
    }
  ]
}
{% endschema %}
